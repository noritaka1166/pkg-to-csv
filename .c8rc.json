{
  "include": [
    "src/**/*.ts",
    "dist/**/*.js"
  ],
  "exclude": [
    "test/**",
    "scripts/**",
    "coverage/**",
    "node_modules/**",
    "**/*.test.js",
    "**/*.spec.js"
  ],
  "extension": [
    ".js",
    ".ts"
  ],
  "reporter": [
    "text",
    "lcov",
    "html"
  ],
  "reports-dir": "coverage",
  "all": true,
  "check-coverage": false,
  "lines": 80,
  "functions": 80,
  "branches": 80,
  "statements": 80
}